@model List<NUEVO.EmlakOfisi.Case.Entity.DTO.Role.CreateRoleDto>
@{
    ViewData["Title"] = "Roller";
    Layout = "~/Views/Shared/_LayoutAI.cshtml";
}

<h2>Roller</h2>

<a href="/admin/createrole">
    <button type="button" class="btn pull-right btn-default waves-effect waves-light m-b-20">
        Rol Ekle
        <span class="btn-label btn-label-right">
            <i class="fa fa-plus"></i>
        </span>
    </button>
</a>

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Rol Adı</th>
                </tr>
                </thead>

                <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

