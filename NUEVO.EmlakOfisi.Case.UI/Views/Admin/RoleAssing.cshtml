@model List<NUEVO.EmlakOfisi.Case.Entity.DTO.Role.RoleAssignDto>
@{
    ViewData["Title"] = "RoleAssing";
    Layout = "~/Views/Shared/_LayoutAI.cshtml";
}

<h2>Kullanıcıya Rol Atama - @ViewBag.userName</h2>
<hr/>

<form asp-controller="Admin" asp-action="RoleAssing" method="post">
    @{
        for (int i = 0; i < Model.Count(); i++)
        {
            <div class="form-check">
                <input asp-for="@Model[i].Exist" type="checkbox" class="form-check-input"/>
                <label asp-for="@Model[i].RoleId" class="form-check-label">@Model[i].RoleName</label>
                
                <input asp-for="@Model[i].RoleName" type="hidden"/>
                <input asp-for="@Model[i].RoleId" type="hidden"/>
            </div>
        }
    }
    <input class="btn btn-success" type="submit" value="Rol Ata"/>
</form>

