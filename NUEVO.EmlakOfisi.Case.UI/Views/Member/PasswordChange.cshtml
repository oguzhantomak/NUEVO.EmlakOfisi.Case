@{
    if (ViewBag.success == "true")
    {
        <div class="container">
            <div class="row">
                <div class="notification success closeable">
                    <p><span>İşlem Başarılı! </span> Şifreniz güncellenmiştir.</p>
                    <a class="close" href="#"></a>
                </div>
            </div>
