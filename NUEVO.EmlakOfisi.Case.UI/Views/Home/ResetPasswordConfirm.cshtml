@model NUEVO.EmlakOfisi.Case.Entity.DTO.User.ResetPasswordDto

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}

@if (ViewBag.status == "success")
{
    <div class="container">

        <!-- Blockquote
        ================================================== -->
        <div class="row">
            <div class="col-md-12">
                <!-- Headline -->
                <h4 class="headline with-border margin-top-0 margin-bottom-35">Şifre Yenileme</h4>
                <blockquote>Şifreniz başarı ile yenilenmiştir. Yeni şifreniz ile giriş yapabilirsiniz.</blockquote>
                <a class="btn btn-link" asp-action="Login" asp-controller="Home">Girişiçin tıklayınız.</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <!--Tab -->
                <div class="my-account style-1 margin-top-5 margin-bottom-40">
                    <h3>Şifre Yenileme</h3>
                    <div class="tabs-container alt">
                        <div class="alert alert-info">Yeni şifrenizi giriniz.</div>
                        <!-- Şifremi Unuttum -->
                        <div class="tab-content" id="tab1" style="display: none;">
                            <form asp-action="ResetPasswordConfirm">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <p class="form-row">
                                    <input type="submit" class="button border margin-top-10" name="yenile" value="Yen Şifre Oluştur" />
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container / End -->
}


