@model List<NUEVO.EmlakOfisi.Case.Entity.DTO.Ilan.ListIlanProfileDto>

@{
    ViewData["Title"] = "Home Page";
    if (ViewBag.layout == "~/Views/Member/_MemberLayout.cshtml")
    {
        Layout = "~/Views/Member/_MemberLayout.cshtml";
    }
}
<!-- Content
================================================== -->
<div class="container">
    <div class="row">

        <div class="col-md-12">
            <h3 class="headline margin-bottom-25 margin-top-65">Yeni Eklenen İlanlar</h3>
        </div>

        <!-- Carousel -->
        <div class="col-md-12">
            <div class="carousel">
                @{
                    foreach (var item in Model)
                    {
 <!-- Listing Item -->
                    <div class="carousel-item">
                        <div class="listing-item">

                            <a href="/ilan/detail/@item.Id" class="listing-img-container">

                                <div class="listing-badges">
                                    <span class="featured">Featured</span>
                                    @{
                                            if (item.Tur)
                                            {
                                        <span>Satılık</span>
                                            }
                                            else
                                            {
                                        <span>Kiralık</span>
                                            }
                                    }
                                </div>

                                <div class="listing-img-content">
                                    @{
                                            if (item.Fiyat != 0)
                                            {
                                                var listingPrice = item.Fiyat / item.Metrekare;
                                        <span class="listing-price">₺@item.Fiyat <i>₺@listingPrice / m²</i></span>
                                            }
                                            else
                                            {
                                        <span class="listing-price">₺@item.Fiyat <i>₺0 / m²</i></span>
                                            }

                                    }
                                </div>

                                <div class="listing-carousel">
                                    @{
                                            if (item.GorselLinki == null)
                                            {
                                        <div><img src="https://picsum.photos/400" alt=""></div>
                                            }
                                            else
                                            {
                                        <div><img src="@item.GorselLinki" alt=""></div>
                                            }
                                    }
                                    @*<div><img src="images/listing-01b.jpg" alt=""></div>
                                        <div><img src="images/listing-01c.jpg" alt=""></div>*@
                                </div>

                            </a>

                            <div class="listing-content">

                                <div class="listing-title">
                                    <h4><a href="single-property-page-1.html">@item.IlanBasligi</a></h4>
                                    @{
                                            var href = "https://www.google.com/maps/place/" + item.CityName;
                                        <a href="@href" class="listing-address popup-gmaps">
                                            <i class="fa fa-map-marker"></i>
                                            @item.CityName, @item.CountryName
                                        </a>
                                    }

                                </div>

                                <ul class="listing-features">
                                    <li>Metrekare <span>@item.Metrekare m²</span></li>
                                    <li>Oda <span>@item.OdaSayisi</span></li>
                                    <li>Banyo <span>@item.BanyoSayisi</span></li>
                                </ul>

                                <div class="listing-footer">
                                    <a href="#"><i class="fa fa-user"></i> @item.EmlakciAdi</a>
                                    <span><i class="fa fa-calendar-o"></i> @item.OlusturmaTarihi</span>
                                </div>

                            </div>

                        </div>
                    </div>
 <!-- Listing Item / End -->
                    }
                }
            </div>
        </div>
        <!-- Carousel / End -->

    </div>
</div>

